<% if @article.errors.any? %>
<div class="alert alert-danger" role="alert">
  <h2 class="alert-heading">
    <%= pluralize(@article.errors.count, "error") %>
    prohibited this article from being saved
  </h2>
</div>
<% end %>
<%= form_for(@article, :html => {role: "form"}) do |f| %>
<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
  <% @article.errors.full_messages_for(:title).each do |msg|%>
  <div class="p-3 mb-2 bg-secondary text-white"><%=msg%></div>
  <% end %>
</div>
<div class="form-group">
  <%= f.label :description %>
  <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article" %>
  <% @article.errors.full_messages_for(:description).each do |msg|%>
  <div class="p-3 mb-2 bg-secondary text-white"><%=msg%></div>
  <% end %>
</div>
<div class="form-group">
  <%= f.submit class: 'btn btn-primary btn-large' %>
</div>
<% end %>
